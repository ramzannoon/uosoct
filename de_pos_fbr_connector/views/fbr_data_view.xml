<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<record id="view_fbr_data_form" model="ir.ui.view">
			<field name="name">pos.order.fbr.log.form</field>
			<field name="model">pos.order.fbr.log</field>
			<field name="arch" type="xml">
				<form string="Fbr Data Form" create="false" edit="false">
					<sheet>
						<group>
							<field name="fbr_order_no"/>
							<field name="fbr_invoice_no"/>
							<field name="fbr_json_data"/>
							<field name="fbr_response"/>
							<field name="actual_order_id"/>
							<field name="create_date"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>


		<record id="view_fbr_data_tree" model="ir.ui.view">
			<field name="name">pos.order.fbr.log.tree</field>
			<field name="model">pos.order.fbr.log</field>
			<field name="arch" type="xml">
				<tree string="Fbr Data Tree" create="false" edit="false">
					<field name="fbr_order_no"/>
					<field name="fbr_invoice_no"/>
					<field name="actual_order_id"/>
					<field name="create_date"/>
					<field name="fbr_response"/>
				</tree>
			</field>
		</record>

		<record id="view_fbr_data_search" model="ir.ui.view">
			<field name="name">pos.order.fbr.log.search</field>
			<field name="model">pos.order.fbr.log</field>
			<field name="arch" type="xml">
				<search string="Fbr Data search">
					<field name="fbr_order_no"/>
					<field name="fbr_invoice_no"/>
					<field name="actual_order_id"/>
				</search>
			</field>
		</record>


		<record id="action_view_fbr_data" model="ir.actions.act_window">
            <field name="name">Fbr Logs</field>
            <field name="res_model">pos.order.fbr.log</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_fbr_data_search"/>
            <field name="view_id" ref="view_fbr_data_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                   Fbr Log Records...
                </p>
            </field>
        </record>
        
        
        
        <menuitem id="menu_fbr_data_records"
        action="de_pos_fbr_connector.action_view_fbr_data"
        parent="point_of_sale.pos_menu_products_configuration"
        sequence="25"/>
        
</odoo>


