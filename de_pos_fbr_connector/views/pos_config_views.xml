<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="pos_config_form_view_inherit">
        <field name="name">pos.config.form.extended.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <h2>FBR Configuration</h2>
                <div class="row mt16 o_settings_container" id="fbr_config">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_fbr"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_fbr"/>
                            <div class="text-muted">
                                    Enable to integrate FBR portal with Points in Sale Interface.
                            </div>
                            <div class="content-group" attrs="{'invisible' : [('enable_fbr', '=', False)]}">
                                <div class="row mt16">
                                    <label string="API URL" for="fbr_url"
                                               class="col-md-3 o_light_label"/>
                                    <field name="fbr_url"
                                               attrs="{'required' : [('enable_fbr', '=', True)]}"/>
                                </div>
                                <div class="row mt16">
                                    <label string="Token" for="fbr_authorization"
                                               class="col-md-3 o_light_label"/>
                                    <field name="fbr_authorization"
                                               attrs="{'required' : [('enable_fbr', '=', True)]}"/>
                                </div>
                                <div class="row mt16">
                                    <label string="POS ID" for="pos_id"
                                               class="col-md-3 o_light_label"/>
                                    <field name="pos_id"
                                               attrs="{'required' : [('enable_fbr', '=', True)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            
            
        </field>
   </record>
		
</odoo>
