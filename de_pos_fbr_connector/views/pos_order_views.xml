<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
   
  	<record id="pos_order_inherit_form_view" model="ir.ui.view">
		<field name="name">pos.order.inherit.form.view</field>
		<field name="model">pos.order</field>
		<field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
		<field name="arch" type="xml">
			<xpath expr="//notebook/page[@name='extra']" position="after">
				<page string="FBR">
					<group>
						<field name="post_data_fbr" readonly="1"/>
						<field name="invoice_number" readonly="1"/>
                        <field name="fbr_json" readonly="1"/>
						<field name="fbr_respone" readonly="1"/>
<!--						<field name="logged_user" readonly="1"/>-->
					</group>
					<!-- <group>
						<field name="return_data_fbr" readonly="1"/>
						<field name="return_invoice_number" readonly="1"/>
					</group> -->
				</page>
			</xpath>
				
		</field>
	</record>
    
    
    <record id="pos_order_inh_view_form_readonly_false" model="ir.ui.view">
        <field name="name">pos.order.inherit.form.view</field>
		<field name="model">pos.order</field>
		<field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="groups_id" eval="[(6, 0, [ref('de_pos_fbr_connector.group_edit_invoice_no')])]" />
        <field name="arch" type="xml">                                   
                <field name="invoice_number" position="attributes">
                   <attribute name="readonly">0</attribute>                   
                </field>
                <field name="post_data_fbr" position="attributes">
                   <attribute name="readonly">0</attribute>                   
                </field>
            </field>
    </record>
    
    
	 <record id="view_pos_order_filter_inherit" model="ir.ui.view">
        <field name="name">pos.order.list.select.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_filter"/>
        <field name="arch" type="xml">
        
        	<field name="name" position="after">
        		<field name="post_data_fbr"/>
        	</field>
        	<xpath expr="//filter[last()]" position="after">
        		<filter string="Failed FBR Request" name="fbr" domain="[('post_data_fbr','=',False)]"/>
        	</xpath>
        </field>
    </record>
	
		
</odoo>
