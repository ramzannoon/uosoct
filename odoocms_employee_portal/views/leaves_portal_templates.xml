    <template id="annual_leaves_summary_details_template" name="Annual Leaves Summary details">
        <t t-call="website.layout">
            <div class="oe_structure">
                <div class="container">
                    <br/>
                    <div id="top_bar">
                        <ul id="breadcrumbs">
                            <li>
