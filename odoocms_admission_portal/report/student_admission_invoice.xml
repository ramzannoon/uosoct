<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="odoocms_admission_portal.report_admission_invoice">
        <t t-call="web.html_container">
            <t t-set="today" t-value="today"/>
            <t t-foreach="application_ids" t-as="o">
                <t t-call="odoocms_admission_portal.report_admission_invoice_document"/>
            </t>
        </t>
    </template>

    <template id="odoocms_admission_portal.report_admission_invoice_document">
        <t t-call="web.basic_layout">

            <t t-if="not company">
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>

            <style>
                #invoice-report {
                font-family: 'Times New Roman', Times, serif;
                border-collapse: collapse;
                width: 100%;
                margin-top:10px;
                }

                #invoice-report td, #invoice-report th {
                border: 1px solid black;
                padding: 1px;
                }

                #invoice-report th {
                text-align: left;
                width:70%;
                font-weight:bold;
                }

                #invoice-report td {
                text-align: center;
                width:30%;
                font-weight:normal;
                }

            </style>

            <div class="page" style="font-size: 12px; padding:5px;font-family: 'Times New Roman', Times, serif;">
                <t t-call="odoocms_admission_portal.student_admission_invoice_template"/>
            </div>

        </t>
    </template>

    <template id="odoocms_admission_portal.student_admission_invoice_template">
        <div class="row">
            <div style="width:33%; border:1px solid; margin-right:5px; padding:0.4%">
                <t t-call="odoocms_admission_portal.student_admission_invoice_copy">
                    <t t-set="copy_name">Bank Copy</t>
                </t>
            </div>
            <div style="width:33%; border:1px solid; margin-right:5px; padding:0.4%">
                <t t-call="odoocms_admission_portal.student_admission_invoice_copy">
                    <t t-set="copy_name">University Copy</t>
                </t>
            </div>
            <div style="width:33.33%; border:1px solid;padding:0.4%">
                <t t-call="odoocms_admission_portal.student_admission_invoice_copy">
                    <t t-set="copy_name">Student Copy</t>
                </t>
            </div>
        </div>
        <!--            </div>-->
    </template>

