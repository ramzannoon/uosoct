<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="admission_register_head">
        <div class="header">
            <div class="row">
                <div class="col-3">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"
                         style="max-height:2cm; max-width:4cm;"/>
                    <!--                    <img t-if="company"-->
                    <!--                       style="max-height:3cm; max-width:6cm;"/>-->
                </div>
                <div class="col-6 ">
                </div>
                <div class="col-3 text-right">
                    <!--                    <img t-if="company.company_id"-->
                    <!--                         style="max-height:3cm; max-width:6cm;"/>-->
                </div>
            </div>
        </div>
        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0"/>
        </div>
        <div class="footer">
        </div>
    </template>

    <template id="admission_register_template">
        <t t-call="web.html_container">
            <!--            <t t-foreach="docs" t-as="doc">-->
            <t t-call="odoocms_admission.admission_register_head">
                <div class="page" style="font-size:14px; margin-left: 2px; margin-right: 2px; border: 2px solid;">
                    <div>
                        <table style="font-size:16px;width:100%;" class="text-center;">
                            <div style="font-size:30px;">
                                <tr style="font-size:30px;">
                                    <center>
                                        <b>
                                            1st Intake-Admission Summary Fall Semester 2022 -2022 - 07-09-2022
                                        </b>
                                    </center>
                                </tr>
                            </div>
                            <div style="font-size:30px;">
                                <tr style="width:100%;">
                                    <td colspan="6"
                                        style="width:70%; border:2px solid black;color:black; text-align:center">
                                        Total
                                        Number of
                                        Applications Received
                                    </td>
                                    <td colspan="2"
                                        style="width:30%; border:2px solid black;color:black;text-align:center">
                                        Enrolment/Registered Students
                                    </td>
                                </tr>
                            </div>

                            <div>
                                <tr style="width:100%; background-color: #8fa4ba;"
                                    class="text-center;">
                                    <td style="width:5%; border:2px solid black;color:black;text-align:center">Sr:#
                                    </td>
                                    <td style="width:22%;color:black;text-align:center;font-size:20px;">School Name</td>
                                    <td style="width:22%; color:black;text-align:center;font-size:20px;">Programme</td>
                                    <td style="width:10%; border:1px solid black;color:black;text-align:center">Program
                                        Total
                                    </td>
                                    <td style="width:10%; border:1px solid black;color:black;text-align:center">School
                                        Total
                                    </td>
                                    <td style="width:10%; border:1px solid black;color:black;text-align:center">
                                        Roll#Issued/Entry Test Fee Paid
                                    </td>

                                    <td style="width:10%; border:1px solid black;color:black;text-align:center">
                                        Registred Students
                                    </td>
                                    <td style="width:10%; border:1px solid black;color:black;text-align:center">School
                                        Total
                                    </td>
                                </tr>
                            </div>
                            <t t-set="sr" t-value="0"/>
                            <tbody class="sale_tbody">
                                <t t-foreach="department_program" t-as="school">
                                    <tr>
                                        <t t-foreach="school.program_ids" t-as="programs">
                                            <t t-set="sr" t-value="sr + 1"/>
                                            <tr>
                                                <td style="border: 2px solid;text-align:center;width:5%;">
                                                    <div class="col-xs-1">
                                                        <span t-esc="sr"/>
                                                    </div>
                                                </td>
                                                <td style="border: 2px solid;text-align:center;width:19%;">
                                                    <div class="col-xs-1">
                                                        <span t-esc="school.name"/>
                                                    </div>
                                                </td>
                                                <td style="border: 2px solid;text-align:center;width:19%;">
                                                    <div class="col-xs-1">
                                                        <span t-esc="programs.name"/>
                                                    </div>
                                                </td>

                                                <td style="border: 2px solid;text-align:center;width:10%;">
                                                    <div class="col-xs-1">
                                                        <span t-esc="get_school_total_program(programs.id)"/>
                                                    </div>
                                                </td>
                                                <td style="border: 2px solid;text-align:center;width:10%;">
                                                    <div class="col-xs-1">
                                                        <span t-esc="get_school_total(programs.id)"/>
                                                    </div>
                                                </td>
                                                <td style="border: 2px solid;text-align:center;width:10%;">
                                                    <div class="col-xs-1">
                                                        <span t-esc="get_school_total_program(programs.id)"/>
                                                    </div>
                                                </td>

                                                <td style="border: 2px solid;text-align:center;width:10%;">
                                                    <div class="col-xs-1">
                                                        <span t-esc="get_enrol_student(programs.id)"/>
                                                    </div>
                                                </td>
                                                <td style="border: 2px solid;text-align:center;width:10%;">
                                                    <div class="col-xs-1">
                                                        <span t-esc="get_enrol_student_total(programs.id)"/>
                                                    </div>
                                                </td>
                                            </tr>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
            <!--            </t>-->
        </t>
    </template>

</odoo>