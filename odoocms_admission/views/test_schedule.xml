<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_odoocms_admission_test_center_tree" model="ir.ui.view">
            <field name="name">odoocms.admission.test.center.tree</field>
            <field name="model">odoocms.admission.test.center</field>
            <!--<field name="priority" eval="8" />-->
            <field name="arch" type="xml">
                <tree string="Entry Test Centers">
                    <field name="name"/>
                    <field name="test_type" />
                    <field name="app_count" />
                </tree>
            </field>
        </record>
        <record id="view_odoocms_admission_test_center_form" model="ir.ui.view">
            <field name="name">odoocms.admission.test.center.form</field>
            <field name="model">odoocms.admission.test.center</field>
            <field name="arch" type="xml">
                <form string="Entry Test Center">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="code" />
                            </group>
                            <group>
                                <field name="test_type" />
                                <field name="app_count" />
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Test Timing">
                                <field name="time_ids">
                                    <tree editable="bottom">
                                        <field name="date" />
                                        <field name="time" widget="float_time"/>
                                        <field name="active_time"/>
                                        <field name="capacity"/>
                                        <field name="app_count" />
                                        <field name="degree_ids" widget="many2many_tags"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <!--<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>-->
                </form>
            </field>
        </record>
         <record id="action_odoocms_admission_test" model="ir.actions.act_window">
        <field name="name">Test Centers</field>
        <field name="res_model">odoocms.admission.test.center</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create Your Test Center here.
            </p>
        </field>
    </record>
        <menuitem
            id="menu_odoocms_admission_test"
            name="Test Centers"
            parent="menu_admission_configuration"
            action="action_odoocms_admission_test"
            sequence="140"/>
       <!--groups="odoocms.group_cms_manager,odoocms_admission.group_admission_manager"-->
    </data>
</odoo>