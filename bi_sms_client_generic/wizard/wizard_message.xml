<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="sms_wizard_message" model="ir.ui.view">
			<field name="name">SMS Message wizard</field>
			<field name="model">sms.wizard.message</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Message">
					<separator string="Message" colspan="6" />
					<field name="text" colspan="4" nolabel="1" readonly="1" widget="html" />
					<newline/>
					<separator colspan="6"/>
					<footer>
						<button special="cancel" class="oe_highlight" string="Close" />
					</footer>
				</form>
			</field>
		</record>
	</data>
</odoo>
