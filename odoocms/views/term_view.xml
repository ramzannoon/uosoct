<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Academic Session -->
    <record id="view_odoocms_academic_session_tree" model="ir.ui.view">
        <field name="name">odoocms.academic.session.tree</field>
        <field name="model">odoocms.academic.session</field>
        <field name="arch" type="xml">
            <tree string="Academic Session">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="view_odoocms_academic_session_form" model="ir.ui.view">
        <field name="name">odoocms.academic.session.form</field>
        <field name="model">odoocms.academic.session</field>
        <field name="arch" type="xml">
            <form string="Academic Session">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code" required="1"/>
                            <field name="sequence" invisible="1"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                        <field name="description" placeholder="Enter the Description"/>
                    </group>
                    <notebook/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_odoocms_academic_session_search" model="ir.ui.view">
        <field name="name">odoocms.academic.session.search</field>
        <field name="model">odoocms.academic.session</field>
        <field name="arch" type="xml">
            <search string="Academic Session">
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_odoocms_academic_session" model="ir.actions.act_window">
        <field name="name">Academic Session</field>
        <field name="res_model">odoocms.academic.session</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_odoocms_academic_session_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the First Academic Session here.
            </p>
        </field>
    </record>

    <!-- Academic Term -->
    <record id="view_odoocms_academic_term_tree" model="ir.ui.view">
        <field name="name">odoocms.academic.term.tree</field>
        <field name="model">odoocms.academic.term</field>
        <field name="arch" type="xml">
            <tree string="Academic Term">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="enrollment_active"/>
                <field name="type"/>
                <field name="number" groups="odoocms.group_cms_manager"/>
            </tree>
        </field>
    </record>

    <record id="view_odoocms_academic_term_form" model="ir.ui.view">
        <field name="name">odoocms.academic.term.form</field>
        <field name="model">odoocms.academic.term</field>
        <field name="arch" type="xml">
            <form string="Academic Term">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="short_code"/>
                            <field name="number" groups="odoocms.group_cms_manager"/>
                        </group>
                        <group>
<!--                            <field name="session_id"-->
<!--                                options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>-->
                            <field name="sequence"/>
                            <field name="type"/>
                            <field name="enrollment_active"/>
                        </group>
                        <field name="description" placeholder="Enter the Description"/>
                        <field name="short_description" placeholder="Enter the Short Description"/>
                    </group>
                    <notebook>
                        <page string="Term Lines">
                            <field name="term_lines">
                                <tree string="Academic Term Lines">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name" required="1"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Public Holidays">
                            <field name="pubilc_holidays_ids">
                                <tree editable="bottom">
                                    <field name="name" required="1"/>
                                    <field name="date" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Academic Term Line -->
    <record id="view_odoocms_academic_term_line_tree" model="ir.ui.view">
        <field name="name">odoocms.academic.term.line.tree</field>
        <field name="model">odoocms.academic.term.line</field>
        <field name="arch" type="xml">
            <tree string="Academic Term Line">
                <field name="sequence" widget="handle"/>
                <field name="name" required="1"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>

    <record id="view_odoocms_academic_term_line_form" model="ir.ui.view">
        <field name="name">odoocms.academic.term.line.form</field>
        <field name="model">odoocms.academic.term.line</field>
        <field name="arch" type="xml">
            <form string="Term Line">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="term_id"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>

                    <group>
                        <field name="campus_ids" widget="many2many_tags"
                            options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        <field name="institute_ids" widget="many2many_tags"
                            options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        <field name="career_ids" widget="many2many_tags"
                            options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        <field name="program_ids" widget="many2many_tags"
                            options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        <field name="batch_ids" widget="many2many_tags"
                            options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                    </group>
                    <!--<group>
                        <field name="domain" widget="domain" options="{'model': 'odoocms.batch', 'in_dialog': True}"/>
                    </group>-->

                    <notebook>
                        <page string="Term Planning">
                            <field name="planning_ids">
                                <tree editable="bottom">
                                    <field name="type"/>
                                    <field name="name"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="type"/>
                                            </group>
                                            <group>
                                                <field name="date_start"/>
                                                <field name="date_end"/>
                                            </group>
                                            <group>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
<!--                        <page string="Description" name="description">-->
<!--                            <group>-->
<!--                                <field name="description" placeholder="Enter the Description"/>-->
<!--                            </group>-->
<!--                        </page>-->
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_odoocms_academic_term_search" model="ir.ui.view">
        <field name="name">odoocms.academic.term.search</field>
        <field name="model">odoocms.academic.term</field>
        <field name="arch" type="xml">
            <search string="Academic Term">
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>


    <record id="action_odoocms_academic_term" model="ir.actions.act_window">
        <field name="name">Academic Term</field>
        <field name="res_model">odoocms.academic.term</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_odoocms_academic_term_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the First Academic Term here.
            </p>
        </field>
    </record>

    <record id="action_odoocms_academic_term_line" model="ir.actions.act_window">
        <field name="name">Academic Term Line</field>
        <field name="res_model">odoocms.academic.term.line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <!--        <field name="search_view_id" ref="view_odoocms_academic_term_line_search"/>-->
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Define Academic Term Details here.
            </p>
        </field>
    </record>



    <menuitem
            id="menu_odoocms_term_setup"
            name="Academic Term Setup"
            parent="menu_odoocms_academic_setup"
            sequence="10"/>

    <menuitem
            id="menu_odoocms_academic_session"
            name="Academic Session"
            parent="menu_odoocms_term_setup"
            action="action_odoocms_academic_session"
            sequence="10"/>

    <menuitem
            id="menu_odoocms_academic_term"
            name="Academic Term"
            parent="menu_odoocms_term_setup"
            action="action_odoocms_academic_term"
            sequence="20"/>

    <menuitem
            id="menu_odoocms_academic_term_line"
            name="Academic Term Line"
            parent="menu_odoocms_term_setup"
            action="action_odoocms_academic_term_line"
            sequence="30"/>

