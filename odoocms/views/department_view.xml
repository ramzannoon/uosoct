<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_odoocms_discipline_tree" model="ir.ui.view">
        <field name="name">odoocms.discipline.tree</field>
        <field name="model">odoocms.discipline</field>
        <field name="arch" type="xml">
            <tree string="Discipline">
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_odoocms_discipline_form" model="ir.ui.view">
        <field name="name">odoocms.discipline.form</field>
        <field name="model">odoocms.discipline</field>
        <field name="arch" type="xml">
            <form string="Discipline">
                <sheet>
                    <group string="Discipline">
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                    <group colspan="4">
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page name="program" string="Academic Programs">
                            <field name="program_ids">
                                <tree string="Academic Programs" create="false" delete="false" edit="false">
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="career_id"/>
                                    <field name="department_id"/>
                                    <field name="effective_date"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <record id="view_odoocms_department_tree" model="ir.ui.view">
        <field name="name">odoocms.department.tree</field>
        <field name="model">odoocms.department</field>
        <field name="arch" type="xml">
            <tree string="Department">
                <field name="code"/>
                <field name="name"/>
                <field name="institute_id"/>
                <!--                <field name="faculty_id"/>-->
            </tree>
        </field>
    </record>

    <record id="view_odoocms_department_form" model="ir.ui.view">
        <field name="name">odoocms.department.form</field>
        <field name="model">odoocms.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <group string="Department">
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="hod_id"
                                options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="effective_date"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group colspan="4">
                        <field name="institute_id"
                            options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                    </group>
                    <notebook>
                        <page name="faculty" string="Faculty">
                            <field name="faculty_ids" colspan="4">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="employee_tag_id" widget="many2many_tags"/>
                                    <field name="employee_name"/>
                                    <field name="employee_work_phone"/>
                                    <field name="employee_work_email"/>
                                    <field name="employee_department_id"/>
                                    <field name="employee_job_id"/>
                                    <field name="employee_parent_id"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="employee_id"/>
                                            <field name="employee_name"/>
                                        </group>
                                        <group>
                                            <field name="employee_work_phone"/>
                                            <field name="employee_work_email"/>
                                        </group>
                                        <group>
                                            <field name="employee_department_id"/>
                                            <field name="employee_job_id"/>
                                            <field name="employee_parent_id"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page name='programs' string="Programs">
                            <field name="program_ids" context="{'default_department_id':id}">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="career_id"/>
                                    <field name="effective_date"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_odoocms_department_search" model="ir.ui.view">
        <field name="name">odoocms.department.search</field>
        <field name="model">odoocms.department</field>
        <field name="arch" type="xml">
            <search string="Department">
                <field name="name"/>
                <field name="code"/>
                <newline/>
            </search>
        </field>
    </record>
    <record id="view_odoocms_discipline_search" model="ir.ui.view">
        <field name="name">odoocms.discipline.search</field>
        <field name="model">odoocms.discipline</field>
        <field name="arch" type="xml">
            <search string="Discipline">
                <field name="name"/>
                <field name="code"/>
                <newline/>
            </search>
        </field>
    </record>

    <record id="action_odoocms_department" model="ir.actions.act_window">
        <field name="name">Department</field>
        <field name="res_model">odoocms.department</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_odoocms_department_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the First Department here.
            </p>
        </field>
    </record>
    <record id="action_odoocms_discipline" model="ir.actions.act_window">
        <field name="name">Discipline</field>
        <field name="res_model">odoocms.discipline</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_odoocms_discipline_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the First Discipline here.
            </p>
        </field>
    </record>

    <menuitem
            id="menu_odoocms_department"
            parent="menu_odoocms_organization_structure"
            name="Departments"
            action="action_odoocms_department"
            sequence="30"/>
    <menuitem
            id="menu_odoocms_discipline"
            parent="menu_odoocms_organization_structure"
            name="Disciplines"
            action="action_odoocms_discipline"
            sequence="40"/>

</odoo>
